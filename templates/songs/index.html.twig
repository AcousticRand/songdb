{% extends "base.html.twig" %}
{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12 main-attribute-table-container">
        <div><div class="attributeTable hidden-xs">
                <table class="col-md-12 col-sm-12 col-xs-12 attribute-table">
                    <tbody>
                    <tr>
                        <th class="attribute-table-header" title="Song Title"><i>Title</i></th>
                        <th class="attribute-table-header" title=""><i>Artist</i></th>
                        <th class="attribute-table-header" title=""><i>Key</i></th>
                        <th class="attribute-table-header" title=""><i>Camelot</i></th>
                        <th class="attribute-table-header" title=""><i>Duration</i></th>
                        <th class="attribute-table-header" title=""><i>BPM</i></th>
                        <th class="attribute-table-header" title="">Action</th>
                    </tr>
                    {% for song in song_list %}
                        <tr>
                            <td class="attribute-table-element" title=""><a href="{{ path('song_edit', {'id':song.id|trans}) }}">{{ song.title }}</a></td>
                            <td class="attribute-table-element" title=""><a href="{{ path('song_edit', {'id':song.id|trans}) }}">{{ song.artist }}</a></td>
                            <td class="attribute-table-element" title="">{{ song.key }}</td>
                            <td class="attribute-table-element" title="">{{ song.camelot }}</td>
                            <td class="attribute-table-element" title="">{{ song.duration }}</td>
                            <td class="attribute-table-element" title="">{{ song.bpm }}</td>
                            <td class="attribute-table-element" title="">
                                <a href="{{ path('song_delete', {'id':song.id|trans}) }}" onclick="return confirm('Are you sure?');">
                                    <button type="button" class="btn btn-danger" aria-label="Delete">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    <ul id="song_list">
    </ul>
{% endblock %}
